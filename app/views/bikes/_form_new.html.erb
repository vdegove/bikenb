<%= simple_form_for @bike do |b| %>
  <%= b.input :name %>
  <%= b.input :address %>
  <%= b.input :price_per_day %>
  <%= b.input :category, collection: ["VTT", "Route", "Ville"] %>
  <%= b.input :description %>
  <%= b.input :photo %>
  <%= b.input :photo_cache, as: :hidden %>
  <div class="text-center">
    <% if policy(@bike).create? %>
      <%= b.submit "Add your bike", class: "new-btn-medium" %>
    <% end %>
    &ensp;&ensp;
    <%= link_to "Back to bikes", bikes_path(), class: "new-btn-medium" %>
  </div>
<% end %>
